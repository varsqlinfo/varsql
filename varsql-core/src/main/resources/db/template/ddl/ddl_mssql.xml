<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE var-ddl SYSTEM  "ddlTemplate.dtd">

<var-ddl>
	<!-- 테이블 생성-->
	<tableScript><![CDATA[

	]]></tableScript>

	<!-- view 생성-->
	<viewScript><![CDATA[

	]]></viewScript>

	<!-- function 생성-->
	<functionScript><![CDATA[

	]]></functionScript>

	<!-- procedure 생성-->
	<procedureScript><![CDATA[

	]]></procedureScript>

	<!-- trigger 생성-->
	<triggerScript><![CDATA[
		/* DROP TRIGGER ; */
		CREATE OR REPLACE
	]]></triggerScript>

	<!-- index 생성-->
	<indexScript><![CDATA[

	]]></indexScript>

	<!-- sequence 생성-->
	<sequenceScript><![CDATA[
{{#equals true ddlOption.addDropClause}}/* DROP SEQUENCE {{OBJECT_NAME}}; */
{{/equals}}

CREATE SEQUENCE [{{schema}}].[{{OBJECT_NAME}}]
AS [int]
START WITH 0
INCREMENT BY {{INCREMENT_BY}}
MINVALUE {{MIN_VALUE}}
MAXVALUE {{MAX_VALUE}}
CACHE
	]]></sequenceScript>

	<!-- 컬럼 추가-->
	<alterAddColumn><![CDATA[
		alter table {{TABLE_NAME}} add {{COLUMN_NAME}} {{DATA_TYPE}} {{DEFAULT_VALUE}}
	]]></alterAddColumn>

	<!-- 컬럼명 수정 추가-->
	<alterRenameColumn><![CDATA[
		sp_rename '{{TABLE_NAME}}.[{{COLUMN_NAME}}]', '{{NEW_COLUMN_NAME}}'
	]]></alterRenameColumn>

	<!-- 컬럼 수정 추가-->
	<alterModifyColumn><![CDATA[
		alter table {{TABLE_NAME}} ALTER COLUMN {{COLUMN_NAME}} {{DATA_TYPE}} {{#equals true ddlOption.isNotNull}} not null {{/equals}} {{DEFAULT_VALUE}}
	]]></alterModifyColumn>

	<!-- 컬럼명 수정 추가-->
	<alterDropColumn><![CDATA[
		alter table {{TABLE_NAME}} DROP COLUMN {{COLUMN_NAME}}
	]]></alterDropColumn>

	<!-- 테이블명 수정 추가-->
	<renameTable><![CDATA[
		sp_rename '{{TABLE_NAME}}', '{{NEW_TABLE_NAME}}'
	]]></renameTable>
</var-ddl>
